<!-- CONTENT -->
<div class="s-slide s-slide-main">
  <%= video_tag("v1.mp4", poster: "slide-1.jpg",  class: "video-bg-m", playsinline: true, autoplay: true,  muted: true) %>
    <div class="socket">
        <div class="cell">
            <div class="b-slide-text quote">
                <div class="title">Мама - сердце семьи!</div>
                <div class="text">Если мама организованная, здоровая и счастливая - выигрывает все семья.</div>
            </div>
        </div>

        <!-- <img class="fig-mob" src="images/fig-mob-1.png" alt="">     -->
    </div>
</div>

<div class="s-item s-intro">
  <div class="socket">
    <%= image_tag('hi.jpg', class: 'image')%>

    <span class="circ"></span>

    <div class="b-quote right">
      <div class="q">„</div>
      <div class="title-d it">
        <div><span>Привет!</span></div>
      </div>

      <p>
        Меня зовут Света Гончарова. Я дважды мама,
        эксперт по семейному тайм-менеджменту,
        писательница и автор <a href="">www.flymama.info</a> Я от всего сердца хочу
        помочь вам стать организованной и счастливой мамой.
      </p>
      <%= link_to 'Узнать больше', about_path, class: "btn btn-2" %>
    </div>
  </div>
</div>

<div class="s-item s-book">
  <div class="socket">

    <span class="circ"></span>

    <div class="book-form">
      <div class="title-d">
        <div><span>Подарок</span></div>
      </div>
      <div class="text">Начните свой путь к порядку прямо сейчас!  Я хочу подарить вам
                        Планер Королевы Порядка. Скачайте, распечатайте и планируйте день,
                        неделю, месяц, меню, бюджет легко и просто.</div>
      <%= form_tag free_planer_path, id: 'free-book-form', remote: true do %>
          <div class="input">
              <%= email_field_tag :email, nil, id: 'email-free-book', placeholder: "введите ваш е-мейл", required: true %>
          </div>
          <%= submit_tag 'Скачать', class: "btn btn-2" %>
        <% end %>
    </div>
      <%= image_tag('planner.jpg', class: 'image') %>
  </div>
</div>

 <div class="b-slider-mobile"></div>

 <div class="s-publish">
    <div class="title-h-center">
        <div class="title-d">
            <div><span>Полиграфия</span></div>
        </div>
        <div class="text polygraphy">Получите ежедневное вдохновение, идеи и мотивацию в
                          моих книгах-бестселлерах для мам. Кстати, кроме книг у меня есть
                          еще календарь и планнер для мам. Вы уже их видели?</div>
    </div>
    <%= link_to 'УЗНАТЬ БОЛЬШЕ', polygraphy_path, class: "btn btn-2 btn-center" %>

    <div class="block-img">
      <%= image_tag('ipad-2.png', class: 'image') %>
    </div>

    <div class="b-books desc">
      <div class="container-fluid">
        <div class="row">
          <% Book.order(:id).all.each do |book| %>
              <div class="b-book col-md-4" id="<%= "book-wrapper-#{book.id}" %>">
                  <div class="cover">
                      <%= image_tag(book.image.url) %>
                  </div>
                  <div class="price">
                      <%= book.price %> грн.
                  </div>
                  <h3><%= book.title %></h3>
                  <p> <%= book.content %></p>
                  <%= link_to 'заказать книгу', polygraphy_path, class: "btn btn-3 btn-more", id: book.id %>
              </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="b-carousel b-carousel-p mobile">
        <div class="jcarousel">
            <ul>
              <li>
                <% Book.order(:id).all.each do |book| %>
                    <div class="b-polygraphy shadow" id=<%="book-wrapper-#{book.id}"%>
                        <h3><%= book.title %></h3>
                        <div class="book" id="<%= "book-#{book.id}" %>">
                            <%= image_tag(book.image.url) %>
                            <div class="circ circ-f"><%= book.price %> грн.</div>
                        </div>
                        <div class="text-b">краткое описание</div>
                        <p> <%= book.content %></p>
                        <%= link_to 'заказать книгу', polygraphy_path, class: "btn btn-3 btn-more", id: book.id %>
                    </div>
                <% end %>
              <li>
            </ul>
        </div>
       <!--  <div class="jcarousel-items"></div>
        <div class="jcarousel-panel"></div>
        <div class="jcarousel-pagination"></div>
        <a href="#" class="jcarousel-control-prev"></a>
        <a href="#" class="jcarousel-control-next"></a> -->
    </div>
 </div>


      <div class="b-slider-p-mobile"></div>


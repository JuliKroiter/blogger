        <div class="input">
          <input type="email" placeholder="введите ваш е-мейл" required>
        </div>
        <button class="btn btn-2" type="submit">получить книгу</button>
      </form>
    </div>
      <%= image_tag('book.png', class: 'image') %>
  </div>
</div>


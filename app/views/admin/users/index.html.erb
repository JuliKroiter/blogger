<%= content_for :header do %>
  Users list
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="users-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created at</th>
      </tr>
      </thead>

      <tbody>
        <%- @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to 'Show', admin_user_path(user) %>
              <%= link_to 'Edit', edit_admin_user_path(user) %>
              <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

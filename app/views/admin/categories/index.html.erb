<%= content_for :header do %>
  Categories list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="categories-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Title</th>
        <th>Topic</th>
        <th>Tag</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%- @categories.each do |category| %>
          <tr>
            <td><%= category.title %></td>
            <td><%= category.topic.try(:title) %></td>
            <td><%= category.tag %></td>
            <td><%= category.created_at %></td>
            <td>
              <%= link_to 'Show', admin_category_path(category) %>
              <%= link_to 'Edit', edit_admin_category_path(category) %>
              <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
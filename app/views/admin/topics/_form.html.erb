 <div class="col-lg-6">
    <%= form_for [:admin, @topic] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, class: 'form-control' %>
      </div>

     <div class="form-group">
       <%= f.label :tag %>
       <%= f.text_field :tag, class: 'form-control' %>
     </div>

      <%= f.submit class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
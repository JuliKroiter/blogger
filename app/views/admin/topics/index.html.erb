<%= content_for :header do %>
  Topics list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Topic', new_admin_topic_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="topics-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Title</th>
        <th>Tag</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%- @topics.each do |topic| %>
          <tr>
            <td><%= topic.title %></td>
            <td><%= topic.tag %></td>
            <td><%= topic.created_at %></td>
            <td>
              <%= link_to 'Show', admin_topic_path(topic) %>
              <%= link_to 'Edit', edit_admin_topic_path(topic) %>
              <%= link_to 'Destroy', admin_topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
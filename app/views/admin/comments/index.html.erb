<%= content_for :header do %>
  Comments list
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="comments-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Content</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%- @comments.each do |comment| %>
        <tr>
          <td><%= comment.content %></td>
          <td><%= comment.created_at %></td>
          <td>
            <%= link_to 'Show', admin_comment_path(comment) %>
            <%= link_to 'Edit', edit_admin_comment_path(comment) %>
            <%= link_to 'Destroy', admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
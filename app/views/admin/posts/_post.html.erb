<tr>
  <td><%= post.title %></td>
  <td><%= post.topic.try(:title) %></td>
  <td><%= post.category.try(:title) %></td>
  <td><%= image_tag(post.image_url(:small_thumb)) %></td>
  <td><%= post.created_at %></td>
  <td>
    <%= link_to 'Show', admin_post_path(post) %>
    <%= link_to 'Edit', edit_admin_post_path(post) %>
    <%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
<%= content_for :header do %>
  <%= @post.title %>
<% end %>
<%= content_for :create_button do %>
  <%= link_to 'New Post', new_admin_post_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @post.title %>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Title:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @post.title %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Content:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @post.content %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Image:
          </div>
          <div class="col-md-9 form-control-static">
            <%= image_tag(@post.image_url(:thumb)) %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Topic:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @post.topic.try(:title) %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3">
            Category:
          </div>
          <div class="col-md-9">
            <%= @post.category.try(:title) %>
          </div>
        </div>

        <%= link_to 'Edit', edit_admin_post_path(@post), class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Comments
      </div>

      <div class="panel-body">
        <ul class="chat">
          <%= render @post.comments %>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= render 'admin/posts/post_comment' %>
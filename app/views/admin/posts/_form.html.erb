<div class="col-lg-6">
  <%= form_for([:admin, @post]) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this admin_post from being saved:</h2>

        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :title, @post.category.try(:id)), {}, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>


<%= content_for :header do %>
  Edit Post
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @post.title %>
      </div>

      <div class="panel-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Comments
      </div>

      <div class="panel-body">
        <ul class="chat">
          <%= render @post.comments %>
        </ul>
      </div>
    </div>
  </div>
</div>

<%= render 'admin/posts/post_comment' %>

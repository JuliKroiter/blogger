<%= content_for :header do %>
  Posts list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Post', new_admin_post_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="posts-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Image</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%= render @posts %>
      </tbody>
    </table>
  </div>
</div>
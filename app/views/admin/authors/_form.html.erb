<div class="col-lg-6">
  <%= form_for([:admin, @author], html: {multipart: true}) do |f| %>
    <% if @author.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@author.errors.count, "error") %> prohibited this admin_author from being saved:</h2>

        <ul>
          <% @author.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :fb_link %>
      <%= f.text_field :fb_link, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= image_tag(@author.picture_url, class: "img-thumbnail #{'hidden' unless @author.picture?}", id: 'img_prev', style: 'max-height:300px;') %>
      <%= f.file_field :picture, class: 'form-control' %>
      <label>
        <%= f.check_box :remove_picture %>
        Remove image
      </label>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>

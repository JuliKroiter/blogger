<%= content_for :header do %>
  Author list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Author', new_admin_author_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="authors-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Fb link</th>
        <th>Picture</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%= render @authors %>
      </tbody>
    </table>
  </div>
</div>

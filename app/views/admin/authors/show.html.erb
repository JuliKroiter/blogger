<%= content_for :header do %>
  <%= @author.title %>
<% end %>
<%= content_for :create_button do %>
  <%= link_to 'New Author', new_admin_author_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @author.name %>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Name:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @author.name %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Description:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @author.description %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Fb link:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @author.fb_link %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Image:
          </div>
          <div class="col-md-9 form-control-static">
            <%= image_tag(@author.picture_url(:thumb)) %>
          </div>
        </div>

        <%= link_to 'Edit', edit_admin_author_path(@author), class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
</div>

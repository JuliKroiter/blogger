<div class="col-lg-6">
  <%= form_for([:admin, @book], html: {multipart: true}) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this admin_book from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :buy_bel_link%>
      <%= f.text_field :buy_bel_link, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :buy_ua_link %>
      <%= f.text_field :buy_ua_link, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :buy_ozon_link %>
      <%= f.text_field :buy_ozon_link, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :buy_labirint_link %>
      <%= f.text_field :buy_labirint_link, class: 'form-control' %>
    </div>
       <div class="form-group">
      <%= f.label :buy_e_link%>
      <%= f.text_field :buy_e_link, class: 'form-control' %>
    </div>


    <div class="form-group">
      <%= image_tag(@book.image_url, class: "img-thumbnail #{'hidden' unless @book.image?}", id: 'img_prev', style: 'max-height:300px;') %>
      <%= f.file_field :image, class: 'form-control' %>
      <label>
        <%= f.check_box :remove_image %>
        Remove image
      </label>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>

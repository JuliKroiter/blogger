<%= content_for :header do %>
  <%= @book.title %>
<% end %>
<%= content_for :create_button do %>
  <%= link_to 'New Book', new_admin_book_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @book.title %>
      </div>

      <div class="panel-body">
        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Title:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @book.title %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Content:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @book.content %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Price:
          </div>
          <div class="col-md-9 form-control-static">
            <%= @book.pricet %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3 form-control-static">
            Image:
          </div>
          <div class="col-md-9 form-control-static">
            <%= image_tag(@book.image_url(:thumb)) %>
          </div>
        </div>

        <%= link_to 'Edit', edit_admin_book_path(@book), class: 'btn btn-default pull-right' %>
      </div>
    </div>
  </div>
</div>

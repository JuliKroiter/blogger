<%= content_for :header do %>
  Book list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Book', new_admin_book_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="books-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th> Price </th>
        <th>Image</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%= render @books %>
      </tbody>
    </table>
  </div>
</div>

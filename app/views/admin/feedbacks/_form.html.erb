<div class="col-lg-6">
  <%= form_for([:admin, @feedback], html: {multipart: true}) do |f| %>
    <% if @feedback.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this admin_author from being saved:</h2>

        <ul>
          <% @feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :commenter_name %>
      <%= f.text_field :commenter_name , class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :short_desc %>
      <%= f.text_field :short_desc, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :long_desc %>
      <%= f.text_area :long_desc, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= image_tag(@feedback.commenter_picture_url, class: "img-thumbnail #{'hidden' unless @feedback.commenter_picture?}", id: 'img_prev', style: 'max-height:300px;') %>
      <%= f.file_field :commenter_picture, class: 'form-control' %>
      <label>
        <%= f.check_box :remove_commenter_picture %>
        Remove image
      </label>
    </div>

    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</div>

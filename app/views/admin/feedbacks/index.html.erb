<%= content_for :header do %>
  Feedback list
<% end %>

<%= content_for :create_button do %>
  <%= link_to 'New Feedback', new_admin_feedback_path, class: 'btn btn-outline btn-success' %>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <table id="feedbacks-datatable" class="display data-results table table-striped table-hover table-bordered dt-bootstrap">
      <thead>
      <tr>
        <th>Commenter Name</th>
        <th>Short Description</th>
        <th>Long Description</th>
        <th>Picture</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
        <%= render @feedbacks %>
      </tbody>
    </table>
  </div>
</div>

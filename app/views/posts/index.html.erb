<%= content_for :search do %>
  <%= form_tag posts_path, method: :get, data: { turboform: true } do %>
    <div class="b-search">
      <%= text_field_tag :term, '', placeholder: 'поиск по сайту'%>
      <button type="submit"></button>
    </div>
  <% end %>
<% end %>

<div class="s-slide s-slide-blog">
  <div class="socket">
    <div class="cell">
      <div class="b-slide-text">
        <div class="text">Больше 1349 разных статей</div>
        <div class="title">Блог</div>
        <a href="" class="btn">Заказать профеcсиональную конультацию</a>
      </div>
    </div>
  </div>
</div>

<div class="blog-socket">
  <div class="s-filter shadow">
    <div class="categories">
      <%- Category.all.each_with_index do |category, index| %>
        <!-- FIX for blank image -->
        <div class="i-category">
          <div class="ico">
            <%= hidden_field_tag :category, category.id, id: "category-#{category.id}"%>
            <%= image_tag("c-#{index + 1 }.png", class: 'def') %>
            <%= image_tag("ico-#{index + 1}.png", class: 'act') %>
          </div>
          <span class = 'category-title'><%= category.title %></span>
        </div>
        <% if params[:category].to_i == index + 1 %>
          <script>
            $("#category-<%=category.id %>").next('.def').next('.act').show();
            $("#category-<%=category.id %>").next('.def').hide();
            $("#category-<%=category.id %>").parents('.i-category').addClass('is-active');
            $("#category-<%=category.id %>").parent().next().css('color', '#d3215d');
          </script>
        <% end %>
      <% end %>
    </div>

    <div class="filter-row">
      <div class="filter-item all topic active-topic">
        <span>Показать все темы</span>
      </div>
      <%- Topic.first(4).each do |topic| %>
        <div class="filter-item topic">
          <%= hidden_field_tag :topic,  topic.id %>
          <span><%= topic.title %></span>
        </div>
      <% end %>
      <div class="filter-item filter-item-select">
        <div class="filter-select">
          <%= select_tag(:theme_select, options_for_select((Topic.all[5..-1] || []).map{|i| [i.title, i.id]}), { include_blank: true, class: 'chosen-select', data: {placeholder: "Еще темы"}})%>
        </div>
      </div>

      <div class="filter-item filter-item-select">
        <div class="filter-select">
          <select>
            <option>Самые новые</option>
            <option>Самые старые</option>
          </select>
        </div>
      </div>
    </div>
  </div>


  <div class="clearfix">
    <!-- Column -->
    <div class="column">
     <%= render 'posts_part' %>
    </div>
  </div>

    <!-- Sidebar -->
    <aside class="sidebar">

      <div class="b-subs shadow">
        <div class="ico-mail">
          <%= image_tag('ico-mail.gif') %>
        </div>
        <h3>Подпишитесь сейчас</h3>
        <p>
          Будьте первыми кто узнает  об обновлениях на нашем сайте
        </p>
        <form action="">
          <div class="input">
            <input type="email" placeholder="введите ваш е-мейл" required>
          </div>
          <button class="btn btn-2" type="submit">подписаться</button>
        </form>
      </div>

      <div class="b-plan shadow">
        <div class="ico-plan">
          <div class="circ circ-f">2017</div>
          <%= image_tag('ico-plan.gif') %>
        </div>
        <h3>Мама-план</h3>
        <p>
          Как маме запланировать и прожить  позитивный, проактивный и продуктивный год
        </p>
        <a class="btn btn-2" href="#">узнать больше</a>
      </div>

      <div class="b-courses shadow">
        <h3>Наши курсы</h3>
        <div class="course-item">
          <div class="circ circ-f">№1</div>
          <a class="text-b" href="#">Система восстановления</a>
          <div class="text">Онлайн-тренинг</div>
        </div>
        <div class="course-item">
          <div class="circ circ-f">№2</div>
          <a class="text-b" href="#">Система восстановления</a>
          <div class="text">Онлайн-тренинг</div>
        </div>
        <div class="course-item">
          <div class="circ circ-f">№3</div>
          <a class="text-b" href="#">Система восстановления</a>
          <div class="text">Онлайн-тренинг</div>
        </div>
      </div>

      <div class="b-load shadow">
        <div>
          посмотреть больше курсов
        </div>
      </div>

      <div class="b-calendar shadow">
        <h3>Календарь тренингов</h3>
        <div id="calendar"></div>
        <a href="" class="today text-b">перейти на сегодня</a>
      </div>

      <div class="b-plan shadow">
        <div class="ico-ball">
          <%= image_tag('ico-ball.gif') %>
        </div>
        <h3>Взлетай над бытом</h3>
        <p>
          Стань королевой порядка! Это проще чем кажется Я расскажу тебе как :)
        </p>
        <a class="btn btn-2" href="#">узнать больше</a>
      </div>

    </aside>

  </div>
</div>

$("<%=j render(:partial => 'posts', :object => @posts) %>")
  .appendTo($(".infinite-table"));

// Update pagination link
<% if @posts.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@posts, 'Next Page',  {contoller: 'posts', action: 'show_posts', remote: true}) %>");
<% end %>
